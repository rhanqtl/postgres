    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch Master",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/output/pgsql/bin/postgres",
            "args": [
                "-D",
                "/tmp/postgres/master/data",
                "-p",
                "5432"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch Slave",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/output/pgsql/bin/postgres",
            "args": [
                "-D",
                "/tmp/postgres/slave/data",
                "-p",
                "6432"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}